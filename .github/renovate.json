{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>rwunderer/renovate",
    "regexManagers:dockerfileVersions"
  ],

  "regexManagers": [
    {
      "description": "Update hcloud cli version",
      "fileMatch": ["(^|/|\\.)Dockerfile$", "(^|/)Dockerfile\\.[^/]*$"]
    }
  ]
}
